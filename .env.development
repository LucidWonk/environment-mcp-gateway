# Development Environment Configuration for EnvironmentMCPGateway

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
TIMESCALE_DATABASE=pricehistorydb
TIMESCALE_USERNAME=postgres
DB_PASSWORD=

# MCP Configuration
MCP_LOG_LEVEL=info
MCP_SERVER_NAME=lucidwonks-environment-mcp-gateway
MCP_SERVER_VERSION=1.0.0

# Development Settings
NODE_ENV=development
DEBUG=true

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock

# Git Configuration
GIT_DEFAULT_BRANCH=master

# Enhanced Timeout Configurations (milliseconds)
SEMANTIC_ANALYSIS_TIMEOUT=90000
DOMAIN_ANALYSIS_TIMEOUT=60000
CONTEXT_GENERATION_TIMEOUT=75000
FILE_OPERATIONS_TIMEOUT=45000
FULL_REINDEX_TIMEOUT=600000
SINGLE_FILE_TIMEOUT=15000

# Rollback Management Configuration
ROLLBACK_MAX_AGE_HOURS=24
ROLLBACK_MAX_COUNT=10
ROLLBACK_CLEANUP_ON_STARTUP=true
ROLLBACK_AGGRESSIVE_CLEANUP=false

# Path Resolution Configuration
PATH_RESOLUTION_DEBUG=false
PATH_CASE_SENSITIVE=true
PATH_AUTO_CREATE_MISSING=true

# Performance Optimization
ENABLE_PARALLEL_PROCESSING=true
MAX_CONCURRENT_OPERATIONS=5
ENABLE_SEMANTIC_CACHING=true

# Logging Configuration
LOG_LEVEL=info
LOG_STRUCTURED=true
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_FILES=5

# Context Generation Configuration
CONTEXT_TEMPLATE_VERSION=v2
CONTEXT_INCLUDE_BUSINESS_RULES=true
CONTEXT_INCLUDE_INTEGRATION_POINTS=true
CONTEXT_MAX_FILE_SIZE=1MB